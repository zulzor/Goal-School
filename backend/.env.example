# backend/.env.example - Пример файла конфигурации среды

# Настройки базы данных
DB_HOST=localhost
DB_NAME=football_school
DB_USER=root
DB_PASSWORD=

# Настройки JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=3600

# Настройки приложения
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Настройки почты (для уведомлений)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@footballschooarsenal.com
MAIL_FROM_NAME="Футбольная школа Арсенал"